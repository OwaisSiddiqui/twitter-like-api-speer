{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "exclude": [
        "tests/*",
        "build"
    ]
}